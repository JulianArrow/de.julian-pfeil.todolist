<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/2019/templateListener.xsd">
	<import>
		<!-- javascript -->
		<templatelistener name="javascriptInclude">
			<environment>user</environment>
			<templatename>headInclude</templatename>
			<eventname>javascriptInclude</eventname>
			<templatecode><![CDATA[{include file='__javascriptInclude' application='todolist'}]]></templatecode>
		</templatelistener>
		
		<!-- copyright -->
		<templatelistener name="copyright">
			<environment>user</environment>
			<templatename>pageFooterCopyright</templatename>
			<eventname>copyright</eventname>
			<templatecode><![CDATA[{include file='__copyright' application='todolist'}]]></templatecode>
		</templatelistener>

		<!-- comments -->
        <templatelistener name="commentsTabMenuTabs">
            <environment>user</environment>
            <templatename>todo</templatename>
            <eventname>tabMenuTabs</eventname>
            <templatecode><![CDATA[{if MODULE_TODOLIST_COMMENTS}{include file='__commentsTabMenuTab' application='todolist'}{/if}]]></templatecode>
        </templatelistener>
        <templatelistener name="commentsTabMenuContents">
            <environment>user</environment>
            <templatename>todo</templatename>
            <eventname>tabMenuContents</eventname>
            <templatecode><![CDATA[{if MODULE_TODOLIST_COMMENTS}{include file='__comments' application='todolist'}{/if}]]></templatecode>
        </templatelistener>
        <templatelistener name="commentsMetaData">
            <environment>user</environment>
            <templatename>todo</templatename>
            <eventname>afterMetaData</eventname>
            <templatecode><![CDATA[{if MODULE_TODOLIST_COMMENTS}{if $todo->enableComments}<li><span class="icon icon16 fa-comments"></span> {lang}todolist.comment.metaData{/lang}</li>{/if}{/if}]]></templatecode>
        </templatelistener>
        <templatelistener name="commentsContainerHeadline">
            <environment>user</environment>
            <templatename>todoList</templatename>
            <eventname>containerHeadline</eventname>
            <templatecode><![CDATA[{if MODULE_TODOLIST_COMMENTS}{if $todo->enableComments}<small class="separatorLeft"><span class="icon icon16 fa-comments"></span> {lang}todolist.comment.metaData{/lang}</small>{/if}{/if}]]></templatecode>
        </templatelistener>

		<!-- reactions / likes -->
        <templatelistener name="todoReactionDataAttributes">
            <environment>user</environment>
            <templatename>todo</templatename>
            <eventname>todoContentAttributes</eventname>
            <templatecode><![CDATA[{if MODULE_TODOLIST_REACTIONS}{@$__wcf->getReactionHandler()->getDataAttributes('de.julian-pfeil.todolist.likeableTodo', $todo->todoID)}{/if}]]></templatecode>
        </templatelistener>
        <templatelistener name="todoUiReactionHandler">
            <environment>user</environment>
            <templatename>todo</templatename>
            <eventname>additionalJavascript</eventname>
            <templatecode><![CDATA[{if MODULE_TODOLIST_REACTIONS}{include file='__uiReactionHandler' application='todolist'}{/if}]]></templatecode>
        </templatelistener>
        <templatelistener name="todoReactionSummaryList">
            <environment>user</environment>
            <templatename>todo</templatename>
            <eventname>beforeTodoButtons</eventname>
            <templatecode><![CDATA[{if MODULE_TODOLIST_REACTIONS}{include file='__reactionSummaryList' application='todolist'}{/if}]]></templatecode>
        </templatelistener>
        <templatelistener name="todoReactButton">
            <environment>user</environment>
            <templatename>todo</templatename>
            <eventname>todoButtons</eventname>
            <templatecode><![CDATA[{if MODULE_TODOLIST_REACTIONS}{include file='__reactButton' application='todolist'}{/if}]]></templatecode>
        </templatelistener>
	</import>
</data>
