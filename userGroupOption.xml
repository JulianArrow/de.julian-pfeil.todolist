<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/5.4/userGroupOption.xsd">
    <import>
		<categories>
			<category name="user.todolist">
				<parent>user</parent>
			</category>
			<category name="mod.todolist">
				<parent>mod</parent>
			</category>

			<category name="user.todolist.general">
				<parent>user.todolist</parent>
			</category>
			<category name="mod.todolist.general">
				<parent>mod.todolist</parent>
			</category>

			<category name="user.todolist.comments">
				<parent>user.todolist</parent>
			</category>
			<category name="mod.todolist.comments">
				<parent>mod.todolist</parent>
			</category>
		</categories>
        <options>
            <option name="user.todolist.general.canSeeTodos">
                <categoryname>user.todolist.general</categoryname>
                <optiontype>boolean</optiontype>
                <defaultvalue>0</defaultvalue>
                <moddefaultvalue>1</moddefaultvalue>
                <admindefaultvalue>1</admindefaultvalue>
                <usersonly>1</usersonly>
            </option>
            <option name="user.todolist.general.canAddTodos">
                <categoryname>user.todolist.general</categoryname>
                <optiontype>boolean</optiontype>
                <defaultvalue>0</defaultvalue>
                <moddefaultvalue>1</moddefaultvalue>
                <admindefaultvalue>1</admindefaultvalue>
                <usersonly>1</usersonly>
            </option>
            <option name="user.todolist.general.canEditOwnTodos">
                <categoryname>user.todolist.general</categoryname>
                <optiontype>boolean</optiontype>
                <defaultvalue>0</defaultvalue>
                <moddefaultvalue>1</moddefaultvalue>
                <admindefaultvalue>1</admindefaultvalue>
                <usersonly>1</usersonly>
            </option>
            <option name="user.todolist.general.canDeleteOwnTodos">
                <categoryname>user.todolist.general</categoryname>
                <optiontype>boolean</optiontype>
                <defaultvalue>0</defaultvalue>
                <moddefaultvalue>1</moddefaultvalue>
                <admindefaultvalue>1</admindefaultvalue>
                <usersonly>1</usersonly>
            </option>
			
            <option name="mod.todolist.general.canEditTodos">
                <categoryname>mod.todolist.general</categoryname>
                <optiontype>boolean</optiontype>
                <defaultvalue>0</defaultvalue>
                <moddefaultvalue>1</moddefaultvalue>
                <admindefaultvalue>1</admindefaultvalue>
                <usersonly>1</usersonly>
            </option>
            <option name="mod.todolist.general.canDeleteTodos">
                <categoryname>mod.todolist.general</categoryname>
                <optiontype>boolean</optiontype>
                <defaultvalue>0</defaultvalue>
                <moddefaultvalue>1</moddefaultvalue>
                <admindefaultvalue>1</admindefaultvalue>
                <usersonly>1</usersonly>
            </option>

            <!-- comments -->
			<option name="mod.todolist.comments.canModerateComments">
				<categoryname>mod.todolist.comments</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<moddefaultvalue>1</moddefaultvalue>
				<usersonly>1</usersonly>
			</option>
			<option name="mod.todolist.comments.canEditComments">
				<categoryname>mod.todolist.comments</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<moddefaultvalue>1</moddefaultvalue>
				<usersonly>1</usersonly>
			</option>
			<option name="mod.todolist.comments.canDeleteComments">
				<categoryname>mod.todolist.comments</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<moddefaultvalue>1</moddefaultvalue>
				<usersonly>1</usersonly>
			</option>
			<option name="user.todolist.comments.canAddComments">
				<categoryname>user.todolist.comments</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<enableoptions>user.todolist.comments.canAddCommentsWithoutModeration</enableoptions>
				<excludedInTinyBuild>1</excludedInTinyBuild>
			</option>
			<option name="user.todolist.comments.canAddCommentsWithoutModeration">
				<categoryname>user.todolist.comments</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<excludedInTinyBuild>1</excludedInTinyBuild>
			</option>
			<option name="user.todolist.comments.canEditComments">
				<categoryname>user.todolist.comments</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>1</defaultvalue>
				<usersonly>1</usersonly>
			</option>
			<option name="user.todolist.comments.canDeleteComments">
				<categoryname>user.todolist.comments</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<admindefaultvalue>1</admindefaultvalue>
				<usersonly>1</usersonly>
			</option>
		</options>
    </import>
</data>
